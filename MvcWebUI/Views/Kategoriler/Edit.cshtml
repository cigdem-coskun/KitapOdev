
@model KategoriModel

@{
    ViewData["Title"] = "Kategori Düzenle";
}

<h1>@ViewData["Title"]</h1>

<h4>Kategori</h4>
<hr />
<div class="row">
    <div class="col-12">

        <form asp-action="Edit" asp-controller="Kategoriler" method="post">

		    @Html.AntiForgeryToken()
            
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row mb-3">

                <label asp-for="Adi" class="col-2 col-form-label"></label>
				
                <div class="col-5">

                    <input asp-for="Adi" class="form-control" type="text" />
                    <span asp-validation-for="Adi" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="Aciklamasi" class="col-2 col-form-label"></label>
				<div class="col-5">
					<textarea asp-for="Aciklamasi" class="form-control" rows="3"></textarea>

					<span asp-validation-for="Aciklamasi" class="text-danger"></span>
				</div>
            </div>

            <input type="hidden" asp-for="Id" />

            <div class="row mb-3">
				<div class="offset-2 col-5">
					<input type="submit" value="Kaydet" class="btn btn-primary" />
					&nbsp;&nbsp;
                    <button type="reset" class="btn btn-outline-primary">Temizle</button>
					&nbsp;&nbsp;


					<a asp-action="Index">Kategori Listesi</a>
				</div>
            </div>
        </form>
    </div>
</div>